<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Registro</title>
    
    <!-- Main CSS-->
    <link href="/stylesheets/signup.css" rel="stylesheet" media="all">
    
    <script src="/js/validacionRegistro.js"></script>
</head>

<body>
    <section class="headerPartial"> 
        <%- include('../partials/header') %>
    </section>
    <main>
        <div class="page-wrapper bg-red p-t-180 p-b-100 font-robo">
            <div class="wrapper wrapper--w960">
                <div class="card card-2">

                    <div class="card-body">
                        <h2 class="title">Completa tus datos</h2>
                        <div class="contenedorForm">
                            <form action="/newUser" method="POST" class="formularioRegistro" enctype="multipart/form-data">
                                <p id="errorNombre"></p>
                                <div class="input-group">
                                    <input class="input--style-2" id="name" type="text" placeholder="Nombre" name="name" required>
                                    
                                </div>
                                
                                <p id="errorApellido"></p>
                                <div class="input-group">
                                    <input class="input--style-2" id="lastName" type="text" placeholder="Apellido" name="lastName" required>
                                </div>
                                
                                <p id="errorUsername"></p>
                                <div class="input-group">
                                    <input class="input--style-2" id="username" type="text" placeholder="Nombre de Usuario" name="username" required>
                                </div>
                                
                                <div class="input-group">
                                    <input class="input--style-2" id="email" type="email" required placeholder="Email" name="email" required>
                                </div>
                                
                                <div class="input-group">
                                    <input class="input--style-2" type="text" placeholder="Domicilio" name="address" required>
                                </div>

                                <div class="row row-space">
                                    <div class="col-2">
                                        <div class="input-group">
                                            <input class="input--style-2 js-datepicker" type="date"  name="birthday" required>

                                        </div>
                                    </div>
                                    <div class="col-2">
                                        <div class="input-group">
                                            <div class="rs-select2 js-select-simple select--no-search">
                                                
                                                <!-- VER COMO SOLUCIONAR ESTE ESTILO! -->
                                                <label for="avatar">
                                                    <p class="input--style-2">Foto de perfil</p>
                                                </label>
                                                <input type="file" class='avatar' name="avatar" id="avatar" required accept=".jpg, .png, .jpeg, .gif">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row row-space">
                                    <div class="col-2">
                                        
                                        <p id="errorPassword"></p>
                                        <div class="input-group">
                                            <input class="input--style-2" id="password" type="password" placeholder="ContraseÃ±a" name="password" required>
                                        </div>
                                    </div>
                                </div>

                                <div class="p-t-30">
                                    <button class="btn btn--radius btn--green" type="submit">Enviar</button>
                                </div>
                            </form>
                        </div>

                        <div class="errores" style="color:red"></div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <!-- Main JS-->
    <script src="js/global.js"></script>

</body>
</html>
<!-- end -->
