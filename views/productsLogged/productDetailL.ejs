<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> <%= product.nombre %></title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/productDetail.css">
    <script src="/js/eliminarProducto.js"></script>
</head>
<body>

    <!-- HEADER-->
    <section class="headerPartial">
        <%- include('../partials/headerLogged') %>
    </section>

    <main>
            
        <section>
 
            <div class="articuloCompleto">

                <div class="elemento">  
                    <div class="foto">
                        <img  src="/images/prodImages/<%=product.foto%>" alt="foto de producto">
                    </div>

                    <div class="cajitaPrecio">
                        
                        <div class="precioDescuento">
                            <div class="precio"> $ <%= product.precio %> </div>
                            <% if (product.discount !=null){ %>
                                <div class="descuento"><%= product.discount %></div>
                            <% } %>
                        </div>
                        <div class="descripcion"><%= product.nombre %></div>
                        <div class="descripcion"><%= product.descripcion %></div>
                        <div class="descripcion"><%= product.marca %></div>
                    </div>
                </div>
                <button><a href="/products/<%=product.id%>/edit">Editar</a></button>
                
                <form method="POST" action="/products/<%=product.id%>/delete?_method=DELETE" class="eliminarPto"> 
                    <button type="submit">ELIMINAR PRODUCTO</button>
                </form>
            </div>


            
        </section>
    </main>

    <!-- FOOTER-->
    <section class="footerPartial"
        <%- include('../partials/footer') %>
    </section>

</body>
</html>